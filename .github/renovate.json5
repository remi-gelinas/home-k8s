{
  "enabled": true,
  "timezone": "America/Toronto",
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "commitBody": "Signed-off-by: remi-gelinas <mail@remigelin.as>",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "commitMessageSuffix": "",
  "rebaseWhen": "conflicted",
  "kubernetes": {
    "fileMatch": ["kubernetes/.+\\.yaml$"]
  },
  "regexManagers": [

    /*
    *  HelmRelease manager
    */
    {
      "fileMatch": [
        "kubernetes/.+\\.yaml$"
      ],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\\n *chart: (?<depName>.*?)\\n *version: (?<currentValue>.*)\\n"
      ],
      "datasourceTemplate": "helm"
    },
    /*
    * CRD manager: cert-manager
    */
    {
      "fileMatch": [
        "kubernetes/common/infrastructure/cert-manager/crds/.+\\.yaml$"
      ],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?) chart=(?<depName>.*?)\\n.*\\/(?<currentValue>.*?)\\/"
      ],
      "datasourceTemplate": "helm"
    },
    /*
    * CRD manager: emissary-ingress
    */
    {
      "fileMatch": [
        "kubernetes/common/infrastructure/emissary-ingress/crds.yaml"
      ],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?) chart=(?<depName>.*?)\\n\\s*?tag:\\schart-v(?<currentValue>.*)"
      ],
      "datasourceTemplate": "helm"
    },
    /*
    * CRD manager: istio
    */
    {
      "fileMatch": [
        "kubernetes/common/infrastructure/istio/crds.yaml"
      ],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?) chart=(?<depName>.*?)\\n\\s*?tag:\\s(?<currentValue>.*)",
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["helm"],
      "semanticCommitScope": "charts",
      "separateMinorPatch": true,
      "ignoreDeprecated": true
    },
    {
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["major"],
      "commitMessagePrefix": "feat(charts): ",
      "labels": ["renovate/helm", "dependencies/major"]
    },
    {
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["minor"],
      "commitMessagePrefix": "feat(charts): ",
      "labels": ["renovate/helm", "dependencies/minor"]
    },
    {
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["patch"],
      "commitMessagePrefix": "fix(charts): ",
      "labels": ["renovate/helm", "dependencies/patch"]
    },
    {
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}